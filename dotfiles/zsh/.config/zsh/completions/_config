#compdef config

local -a commands
commands=(
  'system:reconfigure system'
  'home:reconfigure home'
  'channels:update channels'
)

_arguments \
  '1:command:->cmds' \
  '*::args:->args'

case $state in
  cmds)
    _describe 'command' commands
    ;;
esac

